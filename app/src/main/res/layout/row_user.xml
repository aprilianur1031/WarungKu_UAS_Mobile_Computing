<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/label_product_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kode Barang"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_product_code"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toEndOf="@+id/label_product_code"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_product_code" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="tv_product_name"
        app:layout_constraintStart_toStartOf="@+id/product_code"
        app:layout_constraintTop_toTopOf="@+id/label_product_name" />

    <TextView
        android:id="@+id/label_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga per pcs"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/label_product_name"
        app:layout_constraintTop_toBottomOf="@+id/label_product_name" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_product_price"
        app:layout_constraintStart_toStartOf="@+id/product_code"
        app:layout_constraintTop_toTopOf="@+id/label_product_price" />

    <TextView
        android:id="@+id/label_product_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stok "
        app:layout_constraintStart_toStartOf="@+id/label_product_price"
        app:layout_constraintTop_toBottomOf="@+id/label_product_price" />

    <TextView
        android:id="@+id/stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_product_stock"
        app:layout_constraintStart_toStartOf="@+id/product_name"
        app:layout_constraintTop_toTopOf="@+id/label_product_stock" />

</androidx.constraintlayout.widget.ConstraintLayout>